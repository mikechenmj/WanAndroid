<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultButtonStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/bg_corner_fill_primary</item>
    </style>

    <style name="LoginInputContainerStyle">
        <item name="android:background">@drawable/bg_corner_stroke_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ContentLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">@dimen/sub_text_size</item>
    </style>

    <style name="ColorRedTipLabelStyle" parent="ContentLabelStyle">
        <item name="android:layout_marginTop">@dimen/sub_margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/sub_margin_horizontal</item>
        <item name="android:textColor">@color/color_red_tip</item>
        <item name="android:background">@drawable/bg_corner_stroke_red_tip</item>
    </style>

    <style name="ColorPrimaryLabelStyle" parent="ContentLabelStyle">
        <item name="android:layout_marginTop">@dimen/sub_margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/sub_margin_horizontal</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@drawable/bg_corner_stroke_primary</item>
    </style>

    <style name="SelectorColorPrimaryLabelStyle" parent="ColorPrimaryLabelStyle">
        <item name="android:textColor">@drawable/color_primary_selector</item>
        <item name="android:background">@drawable/selector_bg_corner_primary</item>
    </style>

    <style name="SubContentText">
        <item name="android:textSize">@dimen/sub_text_size</item>
    </style>
</resources>